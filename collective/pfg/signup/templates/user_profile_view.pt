<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.pfg.signup">

    <body>

        <metal:core fill-slot="content-core"
                    tal:define="search_view string:user_search_view;
                                context_url context/absolute_url;">
            <div id="dynamic">
                <a href="" tal:attributes="href string:$context_url/$search_view">Back to Search User</a>
                <form id="userprofiledetails"
                      method="post"
                      tal:attributes="action context/absolute_url">
                    <input type="hidden"
                           name="userid"
                           value="userid"
                           tal:attributes="value view/userid;" />
                    <table class="plain">
                        <tbody>
                            <tr>
                                <th>Full name</th>
                                <td><span class="TEXTFieldRead-TEXT">Fred</span></td>
                            </tr>
                            <tr>
                                <th>Name of council</th>
                                <td><span class="TEXTFieldRead-TEXT">Alburny</span></td>
                            </tr>
                            <tr>
                                <th>User type</th>
                                <td><span class="TEXTFieldRead-TEXT">Super user</span></td>
                            </tr>
                            <tr>
                                <th>Username / email</th>
                                <td><span class="TEXTFieldRead-TEXT">fred@alburny.com</span></td>
                            </tr>
                            <tr>
                                <th>Access approved by</th>
                                <td><span class="TEXTFieldRead-TEXT">Jim Olg</span></td>
                            </tr>
                            <tr>
                                <th>Access approved date</th>
                                <td><span class="TEXTFieldRead-TEXT">29 May 2013</span></td>
                            </tr>
                            <tr>
                                <th>Access last updated by</th>
                                <td><span class="TEXTFieldRead-TEXT">Jim Olg</span></td>
                            </tr>
                            <tr>
                                <th>Access last updated date</th>
                                <td><span class="TEXTFieldRead-TEXT">29 May 2014</span></td>
                            </tr>
                            <tr>
                                <th>Status</th>
                                <td><span class="TEXTFieldRead-TEXT">Inactive</span></td>
                            </tr>
                        </tbody>
                    </table>
                    <input type="submit" value="Edit" name="form.button.edit" >
                    <input type="submit" value="Activate" name="form.button.activate">
                </form>
            </div>
        </metal:core>
    </body>

</html>
